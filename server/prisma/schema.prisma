generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/// Registered users of the Altex platform
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
}

/// Contact form submissions from the website
model Contact {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
